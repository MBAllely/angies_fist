{{#if addDojoForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name}}
      </div>

      <div class="form-group">
        <label for="street">Street</label>
        {{input value=street}}
      </div>

      <div class="form-group">
        <label for="state">State</label>
        {{input value=state}}
      </div>

      <div class="form-group">
        <label for="zip">Zip</label>
        {{input value=zip}}
      </div>

      <div class="form-group">
        <label for="phone">Phone</label>
        {{input value=phone}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image}}
      </div>

      <button {{action 'addDojo'}}>Add</button>
      <button {{action 'toggleForm'}}>Cancel</button>

    </form>
  </div>
{{else}}

  <button {{action 'toggleForm'}}>Add New Dojo</button>

{{/if}}
